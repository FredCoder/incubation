# For display of FMsgChanger - text to be changed by FMsgChanger.py
#
# memo: if adding a custom property, actions are a bit buggy,
#       so be sure to add the property to ALL widgets of that class.

<Widget>
    font_name: '../SourceHanSansJP/SourceHanSansJP-Medium.otf'

<FMsgChangerScreen>
    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 2
            height: '48px'
            size_hint_y: None
            
            Button:
                id: btn_jp
                text: 'to Japanese'
                text_id: 'none'
                on_press:
                    root.change_lang(0)
                    root.set_view(1)
            Button:
                id: btn_en
                text: 'to English'
                text_id: 'none'
                on_press:
                    root.change_lang(1)
                    root.set_view(1)

        BoxLayout:
            orientation: 'vertical'

            Label:
                id: title
                text: 'Title'
                text_id: 'msg_0001'

            Button:
                id: btn
                text: 'Btn'
                text_id: 'msg_0002'
                on_press: print("button pressed")

            Label:
                id: subtext
                text: 'Subtext'
                text_id: 'msg_0003'
