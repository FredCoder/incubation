# For display of FMsgChanger - text to be changed by ViewManager.py

<FMsgChangerScreen>
    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 2
            height: '48px'
            size_hint_y: None
            
            Button:
                id: btn_jp
                text: 'to Japanese'
                font_name: '../SourceHanSansJP/SourceHanSansJP-Medium.otf'
                on_press:
                    root.change_lang(0)
                    root.set_view(1)
            Button:
                id: btn_en
                text: 'to English'
                font_name: '../SourceHanSansJP/SourceHanSansJP-Medium.otf'
                on_press:
                    root.change_lang(1)
                    root.set_view(1)

        BoxLayout:
            orientation: 'vertical'

            Label:
                id: title
                text: 'Title'
                font_name: '../SourceHanSansJP/SourceHanSansJP-Medium.otf'

            Button:
                id: btn
                text: 'Btn'
                font_name: '../SourceHanSansJP/SourceHanSansJP-Medium.otf'
                on_press: print("button pressed")

            Label:
                id: subtext
                text: 'Subtext'
                font_name: '../SourceHanSansJP/SourceHanSansJP-Medium.otf'
