<Widget>
    font_name: 'SourceHanSansJP-Medium.otf'
    halign: 'center'

<SysPasswordScreen>
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.05

            Button:
                id: btn_to_top_scr
                text: 'トップ画面へ戻る'
                on_press: root.to_top_scr()
                size_hint_x: 'none'
                width: '150px'

            Label:
                id: page_title
                font_size: '18px'
                text: 'システムパスワード入力'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.95

            Label:
                size_hint_y: 1

            Label:
                id: page_title
                size_hint_y: 0.25
                font_size: '24px'
                text: 'システムパスワードを入力して下さい：'

            BoxLayout:
                orientation:'horizontal'
                size_hint_y: 'none'
                height: '100px'

                Label:
                    size_hint_y: 1

                TextInput:
                    id: password
                    password: True
                    height: '20px'
                    size_hint_x: 0.8
                    size_hint_y: 0.7

                Button:
                    id: btn_to_shutdown_scr
                    size_hint_x: 0.2
                    size_hint_y: 0.7
                    text: 'OK'
                    on_press: root.check_to_system_top_scr()

                Label:
                    size_hint_y: 1

            Label:
                id: warning
                size_hint_y: 0.25
                font_size: '24px'

            Label:
                size_hint_y: 1